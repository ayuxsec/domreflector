{
  "manifest_version": 2,
  "name": "DOM Reflector",
  "version": "1.0.0",
  "icons": {
    "48": "src/icons/icon48.png",
    "96": "src/icons/icon96.png"
  },
  "description": "Detect reflected strings or regex patterns in live DOM.",
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["src/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "DOM Reflector",
    "default_popup": "src/popup/popup.html"
  }
}
